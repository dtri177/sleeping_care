<button id="openChatBtn" class="chat-open-btn" onclick="openChat()">ðŸ’¬</button>
<script>
    function closeChat() {
    const chatPage = document.getElementById("chatPage");
    chatPage.style.display = "none";  // Hide the chatbox
    document.getElementById("openChatBtn").style.display = "block"; // Show the open button again
}
    function openChat() {
    const chatPage = document.getElementById("chatPage");
    chatPage.style.display = "flex";  // Ensure the chatbox is visible
    document.getElementById("openChatBtn").style.display = "none"; // Hide the open button
}
</script>

